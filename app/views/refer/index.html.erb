<%= @id %>
<div class="row">
  <div class="col-md-6">
    <h3 class="element-spacer-bottom-20">Refer a Friend to get <span class="fa fa-inr" aria-hidden="true"></span>50</h3>
      <%= form_for(@referral, url: refer_path) do |f| %>
        <div class="form-group">
          <%= f.label :referral_email %>
          <%= f.email_field :referral_email, class: "form-control", placeholder: "Enter Email"%>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>